@page
@model Assignment1Attempt4.Areas.Identity.Pages.Student.RegisterForClassModel
@{
    ViewData["Title"] = "RegisterClasses";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">So, you wanna register for classes, eh?</h1>
</div>
            
<h1>Class List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Class Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classes[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classes[0].Location)
            </th>
            <th>
                Professor First Name
            </th>
            <th>
                Professor Last Name
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th>
                M
            </th>
            <th>
                T
            </th>
            <th>
                W
            </th>
            <th>
                Th
            </th>
            <th>
                F
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PFName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PLName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuesday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wednesday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Thursday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Friday)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Register</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Drop</a> |
                </td>
            </tr>
        }
    </tbody>
</table>