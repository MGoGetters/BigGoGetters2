@page
@model Assignment1Attempt4.Areas.Identity.Pages.Student.StudentHomeModel
@{
    ViewData["Title"] = "StudentHome";
    <!--  _Layout.cshtml used a few css sheets including bootstrap -->
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--  This class is for testing CSS for StudentCards.cshtml -->
<!--  Once it's perfected, the CSS will be moved to StudentCards.cshtml -->
<!--  And this class will be deleted. Happy programming :) -->
<link rel="stylesheet" href="~/css/StudentCards.css"/>

<h3 class="card-title">
    StudentHome, this is Xavier's CSS Playground Booooiiiiiisssss
</h3>

<div class="prof-dashboard-card text-center">
    @foreach (var item in Model.Classes)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    Class: @Html.DisplayFor(modelItem => item.ClassName)
                </h5>
            </div>
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-body-secondary">
                    Location: @Html.DisplayFor(modelItem => item.Location)
                </h6>
                <h6 class="card-subtitle mb-2 text-body-secondary">
                    Time: @Html.DisplayFor(modelItem => item.StartTime) - @Html.DisplayFor(modelItem => item.EndTime)
                </h6>
            </div>
            <div>
                <a asp-page="./StudentClassPage" asp-route-id="@item.ID">Take me to Class</a>
            </div>
        </div>
    }
</div>