@using Microsoft.AspNetCore.Identity
@using Assignment1Attempt4.Areas.Identity.Data

@inject SignInManager<Assignment1Attempt4User> SignInManager
@inject UserManager<Assignment1Attempt4User> UserManager


@{
    ViewData["Title"] = "Home Page";
}


@if (SignInManager.IsSignedIn(User)) {
    
    if(@ViewData["StuOrProf"].Equals("Professor"))
    {
        <meta http-equiv="Refresh" content="0; url=https://localhost:7177/Identity/ProfClasses/ProfCards" />
    }
    else
    {
        <meta http-equiv="Refresh" content="0; url=https://localhost:7177/Identity/Student/StudentCards" />
    }

}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>User ID: @ViewData["UserID"]</p>

    <p>Full Name: @ViewData["FirstName"] @ViewData["LastName"]</p>

    <div>
        <h4 align="center">Current Pages</h4>

        <div align="left">
            <h4>/Account/Manage</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/Account/Manage" target="_blank">Account Manage Index</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Calender</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/Calendar/Calendar" target="_blank">Calendar</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>CardPage</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/CardPage/Cards" target="_blank">Class Dummy Cards</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Add Classes</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/PAddClasses/" target="_blank">Index List Classes</a></li>
                <li><a href="https://localhost:7177/Identity/PAddClasses/Create" target="_blank">Create Classes</a></li>
                <li><a href="https://localhost:7177/Identity/PAddClasses/Delete" target="_blank">Delete Classes</a></li>
                <li><a href="https://localhost:7177/Identity/PAddClasses/Edit" target="_blank">Edit Classes</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Professor Classes Cards</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/ProfClasses/ProfCards" target="_blank">Professor Cards</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Professor</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/Professor/ProfessorHome" target="_blank">ProfessorHome</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>ProfilePage</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/ProfileTestPage/Profile" target="_blank">Profile Homepage</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Student</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/Student/RegisterForClass" target="_blank">Register for Class</a></li>
                <li><a href="https://localhost:7177/Identity/Student/StudentHome" target="_blank">Student Home</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>Upload Page</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/UploadPage/Upload" target="_blank">Upload Page</a></li>
            </ul>
        </div>

        <div align="left">
            <h4>User Management</h4>
            <ul>
                <li><a href="https://localhost:7177/Identity/UserManagement/UserInfoEdit" target="_blank">User Account Management Details - Needs c# to be functional</a></li>
            </ul>
        </div>
    </div>
</div>

